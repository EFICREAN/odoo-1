<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
         <record id="medical_patient_view_tree" model="ir.ui.view">
             <field name="name">medical.patient.tree</field>
             <field name="model">medical.patient</field>
             <field name="arch" type="xml">
                 <tree string="Medical Patient">
                     <field name="name" />
                     <field name="ref" />
                     <field name="identification_code" />
                     <field name="age" />
                     <field name="gender" />
                 </tree>
             </field>
         </record>

         <record id="medical_patient_view_form" model="ir.ui.view">
             <field name="name">medical.patient.form</field>
             <field name="model">medical.patient</field>
             <field name="arch" type="xml">
              <form string="Patient">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title" name="title">
                            <field name="image" widget='image'
                                class="oe_left oe_avatar" options="{'preview_image': 'image_medium', 'size': [90, 90]}"/>
                            <h1><field name="name" placeholder="First Name Last Name" /></h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                        </div>
                        <group name="data">
                            <group name="main">
                                 <field name="ref"/>
                                 <field name="identification_code"/>
                                 <field name="medical_center_id"/>
                                 <field name="x_dni"/>
                            </group>
                            <group>
                                 <field name="dob"/>
                                 <field name="x_lugar_nac"/>
                                 <field name="dod"/>
                                 <field name="age"/>
                                 <field name="gender"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="General Information"> 
                                <group string="Contact Information">
                                    <group>
                                        <label for="street" string="Address"/>
                                        <div>
                                            <field name="use_parent_address" class="edit_only inline" invisible="1"/>
                                            <label for="use_parent_address" class="edit_only" invisible="1"/>
                                            <field name="street" placeholder="Street..." />
                                            <field name="street2" />
                                            <div class="address_format">
                                                <field name="city" placeholder="City" style="width: 40%" />
                                                <field name="state_id" class="no_button" placeholder="State" style="width: 37%" options='{"no_open": True}' />
                                                <field name="zip" placeholder="ZIP" style="width: 20%" />
                                            </div>
                                            <field name="country_id" placeholder="Country" class="no_button" options='{"no_open": True}' />
                                        </div>
                                        <field name="website" widget="url" placeholder="e.g. www.openerp.com"/>
                                        <field name="x_estado_civil"/>
					<field name="x_ocupacion"/>
					<field name="x_raza"/>
					<field name="x_grado_instruccion"/>
					<field name="x_religion"/>
					<separator string="NOMBRE DE LOS PADRES" colspan="2"/>
					<field name="x_nombre_padre"/>
					<field name="x_apellido_padre"/>
					<field name="x_nombre_madre"/>
					<field name="x_apellido_madre"/>
					<field name="x_otros"/>
                                    </group>
                                    <group>
                                        <field name="phone" placeholder="e.g. +32.81.81.37.00"/>
                                        <field name="mobile"/>
                                        <field name="fax"/>
                                        <field name="email" widget="email"/>
                                    </group>
                                </group>
                                <group  col="4" colspan="4"> 
                                    <field name="marital_status" colspan="2"/>
                                    <field name="parent_id" colspan="2" string="Legal Representative" domain="[('is_patient','=',True)]"/>
                                </group>
                                <group  col="4" colspan="4"> 
                                     <field name="lang" colspan="2"/>
                                     <field name="opt_out" string="I don't want to receive comercial messages" colspan="2"/>
                                 </group>
                            </page>
   			    <page string="ANTECEDENTES MEDICOS">
					<group>
					   <separator string="(1) ANTECEDENTES FAMILIARES ( PAPÁ, MAMÁ O HERMANOS ) SUFRE O HA SUFRIDO DE:" colspan="2"/>
					   <group>
						<field name="x_asma"/>
						<field name="x_diabetes"/>
						<field name="x_cancer"/>
						<field name="x_hipertencion"/>
						<field name="x_e_infecciosas"/>
					   </group>
					   <group>
						<field name="x_e_cardiovasculares"/>
						<field name="x_alergias"/>
						<field name="x_padres_vivos"/>
						<field name="x_otros"/>
					   </group>
				 
					   <field name="x_especifique"/>	
					   <separator string="(2) ANTECEDENTES PERSONALES ( PATOLÓGICOS)" colspan="2"/>
					   <group>
						<field name="y_asma"/>
						<field name="y_diabetes"/>
						<field name="y_cancer"/>
						<field name="y_hipertencion"/>
						<field name="y_e_infecciosas"/>
					   </group>
					   <group>
						<field name="y_e_cardiovasculares"/>
						<field name="y_alergias"/>
						<field name="y_padres_vivos"/>
						<field name="y_otros"/>
					   </group>
					   
					   <field name="y_especifique"/>
					   <field name="y_operaciones_previas_frac"/>
					   <separator string="(3) FISIOLÓGICOS" colspan="2"/>
					   <group>
						<field name="y_parto"/>
						<field name="y_lactancia"/>
						<field name="y_desarrollo"/>
					   </group>
					   <group>
						<field name="y_carbohidratos"/>
						<field name="y_proteinas"/>
						<field name="y_grasas"/>
						<field name="y_azucares"/>
					   </group>
					   <group>
						<field name="x_menarquia"/>
						<field name="x_alcohol"/>
						<field name="x_nro_parejas"/>
						<field name="x_ritmo_catemenial"/>
						<field name="x_cafe"/>
					   </group>
					    <group>
						<field name="x_inicio_rrss"/>
						<field name="x_embarazos"/>
						<field name="x_tabaco"/>
						<field name="x_abortos"/>
						<field name="x_drogas"/>
					   </group>
					   <field name="x_nro_parejas_12M"/>
					    <separator string="(4) INMUNOLÓGICOS" colspan="2"/>
					    	<field name="x_cartilla_vacunacion"/>
						<field name="x_ref_vacunacion_completa"/>
					    <separator string="(5) EPIDEMIOLOGICOS" colspan="2"/>
					     <group>
						<field name="x_tipo_vivienda"/>
						<field name="x_nro_personas_habitacion"/>
						<field name="x_ocupacion"/>
					     </group>
					     <group>
						<field name="x_viajes"/>
						<field name="y_Luz"/>
						<field name="y_agua"/>
						<field name="y_desague"/>
					      </group>	
					      <field name="x_medicamentos_uso_cont"/>
				      </group>
				</page>
				<page string="FUNCIONES VITALES">
					<label for="FUNCIONES VITALES"/>
					<field name="x_id_funciones_vitales" nolabel="1"/>
				</page>
                        </notebook> 
                     </sheet>
                    <div name="configurator" class="oe_form_sheetbg" groups="medical.group_medical_configurator">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <group name="moreinfo">
                                <field name="id"/>
                                <field name="active"/>
                            </group>
                        </div>
                    </div>
                 </form>
             </field>
         </record>

        <record model="ir.ui.view" id="medical_patient_view_kanban">
            <field name="name">medical.patient.kanban</field>
            <field name="model">medical.patient</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban class="background_grey">
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="kanban_content">
                                <div class="kanban_vignette semantic_html_override">
                                    <a type="open"><img t-att-src="kanban_image('medical.patient', 'image', record.id.value)" width="110" height="110" class="employee_picture"/></a>
                                    <div class="kanban_details">
                                        <h3>
                                            <a type="open"><field name="name"/></a>
                                        </h3>
                                        <ul>
                                            <li t-if="record.age.raw_value"><b>Age:</b> <field name="age"/></li>
                                            <li t-if="record.gender.raw_value"><b>Sex:</b> <field name="gender"/></li>
                                            <li t-if="record.ref.raw_value"><b>SSN:</b> <field name="ref"/></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates> 
                </kanban>
            </field>
        </record>

         <record id="medical_patient_view_search" model="ir.ui.view">
             <field name="name">medical.patient.search</field>
             <field name="model">medical.patient</field>
             <field name="arch" type="xml">
                 <search string="Medical Patient">
                     <field name="name" />
                     <field name="general_info" />
                     <field name="ref" />
                     <field name="dob" />
                     <field name="age" />
                     <field name="identification_code" />
                     <newline />
                     <group expand="0" string="Group By...">
                         <filter string="DoB" domain="[]" context="{'group_by':'dob'}" />
                         <filter string="Age" domain="[]" context="{'group_by':'age'}" />
                     </group>
                 </search>
             </field>
         </record>

         <record model="ir.actions.act_window" id="medical_patient_action">
             <field name="name">Patient</field>
             <field name="type">ir.actions.act_window</field>
             <field name="res_model">medical.patient</field>
             <field name="view_type">form</field>
             <field name="view_mode">kanban,tree,form</field>
             <field name="search_view_id" ref="medical_patient_view_search" />
             <field name="domain">[]</field>
             <field name="context">{}</field>
         </record>

    </data>
</openerp>
