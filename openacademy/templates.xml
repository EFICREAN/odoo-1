<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <record model="ir.ui.view" id="course_tree_view">
            <field name="name">course.tree</field>
            <field name="model">openacademy.course</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Course Tree">
                    <field name="name"/>
                    <field name="description"/>
		    <field name="responsible_id"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="course_search_view">
            <field name="name">course.search</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                </search>
            </field>
        </record>
        
        <record model="ir.ui.view" id="course_form_view">
            <field name="name">Course Form</field>
            <field name="model">openacademy.course</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                  <group>
		    <field name="name"></field>
	            <field name="responsible_id"></field>
                 </group>
		 <notebook position="after" colspan="4">
                        <page string="Sessions">
                            <field name="session_ids" nolabel="1" colspan="4"> 
			    	<tree string = "Registered sessions">
					<field name="name"/>
					<field name="instructor_id"/>
				</tree>	
  			    </field>
                        </page>
                        <page string="Description">
                            <field name="description" nolabel="1" colspan="4"> </field>
                        </page>
                 </notebook>
                </form>
            </field>
        </record>
	<record model="ir.ui.view" id="session_form_view">
		<field name="name">session.form</field>
		<field name="model">openacademy.session</field>
		<field name="arch" type="xml">
		  <form string="Session Form">
		    <sheet>
			<group>
			 <group string= "General">
			  <field name="course_id"/>
			  <field name="name"/>
			  <field name="instructor_id"/>
			 </group>
			 <group string="Schedule"> 
			  <field name="name"/>
			  <field name="start_date"/>
			  <field name="duration"/>
			  <field name="seats"/>
			 </group>
			</group>
			<label for="attendee_ids2"/>
			<field name="attendee_ids2"/>
		    </sheet>
		 </form>
		</field>
	</record>

       <record model="ir.ui.view" id="session_tree_view">
            <field name="name">session.tree</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <tree string="Session Tree">
                    <field name="name"/>
                    <field name="course_id"/>
                </tree>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Courses</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
   	    <field name="help" type="html">
		<p class="oe_view_nocontent_create">Create
		</p>	
	    </field>
        </record>
        
                
        <record model="ir.actions.act_window" id="session_list_action">
            <field name="name">Sessions</field>
            <field name="res_model">openacademy.session</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
   	    <field name="help" type="html">
		<p class="oe_view_nocontent_create">Create
		</p>	
	    </field>
        </record>
        
                
        <record model="ir.actions.act_window" id="attendee_list_action">
            <field name="name">Attendees</field>
            <field name="res_model">openacademy.attendee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
   	    <field name="help" type="html">
		<p class="oe_view_nocontent_create">Create
		</p>	
	    </field>
        </record>
        
        <menuitem id="main_open_menu" name="Course main"/>

        <menuitem id="openacademy_menu" name="Courses Menu" parent="main_open_menu"/>
        
        <menuitem id="course_menu" name="Courses" parent="openacademy_menu"
                action="course_list_action"/>
        <menuitem id="session_menu" name="Sessions" parent="openacademy_menu"
                action="session_list_action"/>
	<menuitem id="attendee_menu" name="Attendees" parent="openacademy_menu"
                action="attendee_list_action"/>
    </data>
</openerp>
